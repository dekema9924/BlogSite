<link rel="stylesheet" href="/assets/style.css">

<%- include('partials/Header.ejs') %>.


<form class="blog_form" action="/routes/<%= blogs.id %>?_method=PATCH" method="post">
    <h2>Edit Post</h2>

    <label for="title">Title</label>
    <input type="text" name="title" value="<%= blogs.title %>" >

    <label for="content">Content</label>
    <textarea class="content" name="content"  cols="30" rows="10" ><%= blogs.blog %></textarea>
    
    <div class="btns">
        <button class="update_btn" type="submit">Update</button>
        <button class="edit_btn" ><a href="/routes/readmore/<%= blogs.id %>">Cancel</a>
    </div>


</form>
<%- include('partials/Footer.ejs') %>.

